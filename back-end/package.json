{
  "name": "nodejs-backend-boilerplate",
  "version": "0.0.1",
  "description": "Node.js backend boilerplate",
  "main": "index.js",
  "scripts": {
    "start": "tsx watch src/index.ts",
    "dev": "tsx watch src/index.ts",
    "db-dev-seed": "tsx drizzle/script/dev-seed.ts",
    "db-generate-migrations": "drizzle-kit generate:pg",
    "db-push-migrations": "drizzle-kit push --config drizzle.config.ts",
    "db-introspect": "drizzle-kit introspect --config drizzle.config.ts",
    "db-apply-migrations": "tsx drizzle/script/migrate-db.ts",
    "db-drop-migration": "drizzle-kit drop",
    "type-check": "tsc --project tsconfig.json --noEmit",
    "eslint": "npx eslint .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "accepts": "^1.3.8",
    "api": "^6.1.1",
    "async-lock": "^1.4.0",
    "axios": "^1.4.0",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.1",
    "drizzle-orm": "0.34.1",
    "eftify-drizzle-pg": "^0.0.2",
    "ejs": "^3.1.9",
    "express": "^5.0.0-beta.1",
    "express-rate-limit": "^7.2.0",
    "fs-extra": "^11.1.1",
    "helmet": "^7.1.0",
    "inversify": "^6.0.1",
    "jsonwebtoken": "^9.0.2",
    "mime": "^3.0.0",
    "mime-types": "^2.1.35",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.8",
    "openpgp": "^5.11.1",
    "passport": "^0.7.0",
    "passport-auth-token": "^1.0.1",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "postgres": "^3.3.5",
    "reflect-metadata": "^0.1.13",
    "sharp": "^0.32.5",
    "tsx": "^4.7.1",
    "wkhtmltopdf": "^0.4.0",
    "wkhtmltopdf-installer": "^0.3.2"
  },
  "devDependencies": {
    "@types/accepts": "^1.3.7",
    "@types/async-lock": "^1.4.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.5",
    "@types/cors": "2.8.5",
    "@types/ejs": "^3.1.5",
    "@types/express": "^4.17.17",
    "@types/express-xml-bodyparser": "^0.3.5",
    "@types/fs-extra": "^11.0.1",
    "@types/html-pdf-node": "^1.0.2",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/mime-types": "^2.1.4",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.4.0",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.14",
    "@types/passport-auth-token": "^1.0.4",
    "@types/passport-jwt": "^4.0.0",
    "@types/passport-local": "^1.0.38",
    "@types/sharp": "^0.32.0",
    "@types/wkhtmltopdf": "^0.3.8",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "drizzle-kit": "0.25.0",
    "eslint": "^8.46.0",
    "typescript": "^5.6.3"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "@typescript-eslint/ban-ts-comment": "off",
      "@typescript-eslint/no-explicit-any": "off"
    },
    "ignorePatterns": [
      "git_hooks/",
      "README.md"
    ]
  }
}
